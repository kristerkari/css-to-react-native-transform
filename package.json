{
  "name": "css-to-react-native-transform",
  "description": "Convert CSS text to a React Native stylesheet object",
  "version": "1.7.0",
  "main": "dist/index.js",
  "author": "Krister Kari",
  "license": "MIT",
  "scripts": {
    "prettify": "prettier --write '**/*.@(js|json|md)'",
    "precommit": "lint-staged",
    "build": "babel src --ignore index.spec.js --out-dir dist",
    "test": "jest",
    "prepublish": "npm run build",
    "release": "npmpub"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^3.0.1",
    "husky": "^1.0.0",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "npmpub": "^4.0.1",
    "prettier": "^1.13.5"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "css": "^2.2.3",
    "css-mediaquery": "^0.1.2",
    "css-to-react-native": "^2.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kristerkari/css-to-react-native-transform.git"
  },
  "keywords": [
    "React",
    "ReactNative",
    "styles",
    "CSS"
  ],
  "files": [
    "dist",
    "src",
    "CHANGELOG.md",
    "README.md"
  ]
}
